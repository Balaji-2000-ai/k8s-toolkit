---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: first-deployment
spec:
  replicas: 3
  selector:
    matchLabels:
      app: uber
      env: dev
  template:
    metadata:
      labels:
        app: uber
        env: dev
    spec:
      containers:
        - name: cont-1
          image: nginx
          ports:
            - containerPort: 80

---
apiVersion: v1
kind: Service
metadata:
  name: uber-service
spec:
  type: LoadBalancer
  selector:
    app: uber
    env: dev
  ports:
    - port: 80
      targetPort: 80
