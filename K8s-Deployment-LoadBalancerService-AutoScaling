apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: my-horizontal-podscaler
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: first-deployment
  minReplicas: 5
  maxReplicas: 8
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 10
