---
apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: zomato
spec:
  replicas: 4
  selector:
    matchLabels:
      app: mylabel
  template:
    metadata:
      labels:
        app: mylabel
    spec:
      containers:
        - name: cont-1
          image: shaikmustafa/dm
          ports:
            - containerPort: 80

---
apiVersion: v1
kind: Service
metadata:
  name: devOps
spec:
  type: LoadBalancer
  selector:
    app: mylabel
  ports:
    - port: 80
      targetPort: 80

 
