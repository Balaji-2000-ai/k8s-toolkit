#The value of the environment variable value-1 uses specific key "secret_key" from a Kubernetes Secret named "secret_name"
---
apiVersion: v1
kind: Pod
metadata:
  name: pod-1
spec:
  containers:
    - name: cont-1
      image: nginx
      env:
        - name: value-1
          valueFrom:
            secretKeyRef:
              name: secret_name
              key: secret_key




---
apiVersion: v1
kind: Pod
metadata:
  name: pod-2
spec:
  containers:
    - name: cont-1
      image: nginx
      env:
        - name: value-1
          valueFrom:
            secretKeyRef:
              name: secret_name
              key: secret_key

        - name: value-2
          valueFrom:
            secretKeyRef:
              name: secret_name
              key: secret_key



---
apiVersion: v1
kind: Pod
metadata:
  name: pod-3
spec:
  containers:
    - name: cont-1
      image: nginx
      envFrom:
        - secretRef:
            name: secret_name




