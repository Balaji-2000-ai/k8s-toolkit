kubectl create secret docker-registry secret_name --docker-username=dockerhub_username --docker-password='dockerhub_token'

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: mydeployment
spec:
  replicas: 2
  selector:
    matchLabels:
      app: uber
  template:
    metadata:
      labels:
        app: uber
    spec:
      imagePullSecrets:
        - name: secret_name 
      containers:
        - name: cont-1
          image: dockerhub_private_repo_image
          ports:
            - containerPort: 80

---
apiVersion: v1
kind: Service
metadata:
  name: uber-service
spec:
  type: NodePort
  selector:
    app: uber
  ports:
    - port: 80
      targetPort: 80

